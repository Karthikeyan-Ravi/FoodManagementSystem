@model FoodManagementSystem.Models.UserSignInViewModel

@{
    ViewBag.Title = "SignIn";
}

<div class="Form">
    <h2>SignIn</h2>
    @using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <table class="FormContent">
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.Mail)
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.Mail, new { @maxlength = 30 })
                    @Html.ValidationMessageFor(Model => Model.Mail)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.Password)
                </td>
                <td>
                    @Html.PasswordFor(Model => Model.Password, new { @maxlength = 12 })
                    @Html.ValidationMessageFor(Model => Model.Password)
                </td>
            </tr>
        </table>
        <a>
            <input class="BtnStyle" type="submit" id="signIn" value="SignIn" />
        </a>
        <p>Don't have an account </p>
        @Html.ActionLink("SignUp", "SignUp", "Account", new { @class = "SignUpLink" });
    }
</div>


