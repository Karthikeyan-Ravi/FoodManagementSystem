@model FoodManagementSystem.Models.UserSignUpViewModel

@{
    ViewBag.Title = "SignUp";
}


<div class="Form">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <h2>SignUp</h2>
    @using (Html.BeginForm("SignUp", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <table class="FormContent">
            @Html.ValidationSummary(true)
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.FullName)
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.FullName, new { @maxlength = 11 })
                    @Html.ValidationMessageFor(Model => Model.FullName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.PhoneNumber)
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.PhoneNumber)
                    @Html.ValidationMessageFor(Model => Model.PhoneNumber)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.Gender)
                </td>
                <td>
                    @Html.EnumDropDownListFor(Model => Model.Gender)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.Mail)

                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.Mail, new { @maxlength = 64 })
                    @Html.ValidationMessageFor(Model => Model.Mail)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.Password)
                </td>
                <td>
                    @Html.PasswordFor(Model => Model.Password, new { @Maxlength = 10 })
                    @Html.ValidationMessageFor(Model => Model.Password)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model=>Model.ConfirmPassword)
                </td>
                <td>
                    @Html.PasswordFor(Model=>Model.ConfirmPassword, new { @MaxLength = 10})
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(Model => Model.Role)
                </td>
                <td>
                    @Html.RadioButtonFor(Model => Model.Role, "User")User<br />
                    @Html.RadioButtonFor(Model => Model.Role, "Restaurant Manager")Restaurant Manager
                    @Html.ValidationMessageFor(Model => Model.Role)
                </td>
            </tr>
            <tr>
                <td>
                    <input class="BtnStyle" type="submit" id="register" value="Register" />
                </td>
            </tr>
            <tr>
                <td>
                    <p>Have an account</p>
                </td>
                <td>
                  @Html.ActionLink("SignIn", "SignIn", "User");
                </td>
            </tr>

        </table>
        @*<div>
                @Html.Partial("PartialViewDemo")
                @{
                    Html.RenderPartial("SignIn");
                }
                @{
                    Html.RenderAction("SignIn");
                }
            </div>*@

    }
</div>

