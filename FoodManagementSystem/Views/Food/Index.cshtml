@model IEnumerable<FoodManagementSystem.Entity.FoodItem>

@{
    ViewBag.Title = "Index";
}

<h2>Food Details</h2>
<table class="DisplayFoodContent" border="1" align="center" cellpadding="20" cellspacing="5"style="background-color:white">
    <tr>
        <td>FoodName</td>
        <td>FoodCategory</td>
        <td>RestaurantName</td>
        <td>Price</td>
    </tr>
    @foreach(var items in Model)
    {
        items.FoodImagePath = Path.Combine("~/FoodImages/", items.FoodImagePath);
        <tr>
            <td>
                @items.FoodName
            </td>
            <td>
                @items.FoodCategory.CategoryName
            </td>
            <td>
                @items.RestaurantFields.RestaurantName
            </td>
            <td>
                @items.FoodPrice
            </td>
            <td>
                <img style="min-height:200px;width:100%" src="@Url.Content(items.FoodImagePath)" />
            </td>
            @*<td>
                @Html.ActionLink("Edit","EditFood",new { id=items.FoodID})
                @Html.ActionLink("Delete","DeleteFood",new { id=items.FoodID},new {onclick= "return confirm('Are you sure you wish to delete this Food');" })
            </td>*@
        </tr>
    }
</table>
